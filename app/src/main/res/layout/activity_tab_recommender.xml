<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.SampleMessageTile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/touch_selector"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

            <Button
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="제조국"
                android:textSize="36dp"
                android:layout_margin="5dp"
                android:id="@+id/recommenderBtnCountry"
                android:fontFamily="san-serif-light"
                android:textColor="@color/white"
                android:background="@color/sunshine_light_blue"
                android:onClick="onClickCountry"
                />
            <Button
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="도수별"
                android:textSize="36dp"
                android:layout_margin="5dp"
                android:id="@+id/recommenderBtnDegree"
                android:textColor="@color/white"
                android:background="@color/sky_green"
                android:onClick="onClickDegree"
                />

            <Button
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="맛"
                android:textSize="36dp"
                android:layout_margin="5dp"
                android:id="@+id/recommenderBtnTaste"
                android:fontFamily="san-serif-light"
                android:textColor="@color/white"
                android:background="@color/fab_color_1_muted"
                android:onClick="onClickTaste"
                />
    </LinearLayout>

</ScrollView>