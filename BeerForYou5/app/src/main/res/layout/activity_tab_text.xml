<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/Widget.SampleMessageTile"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@style/Widget.SampleMessage"
            android:id="@+id/TabTextTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:background="#fb3"
            android:text="수입 맥주 탑 5"/>

            <ScrollView
                style="@style/Widget.SampleMessageTile"
                android:id="@+id/TabTextScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:fillViewport="true"
                android:layout_below="@+id/TabTextTitle1">
                <ListView
                    android:id="@+id/TabTextList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:dividerHeight="1dp">
                </ListView>
            </ScrollView>


        <TextView
            style="@style/Widget.SampleMessage"
            android:id="@+id/TabTextTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:layout_below="@+id/TabTextScrollView1"
            android:background="#fb3"
            android:text="맞춤 추천 맥주 탑 5"/>
        <ScrollView
            style="@style/Widget.SampleMessageTile"
            android:id="@+id/TabTextScrollView2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:fillViewport="true"
            android:layout_below="@+id/TabTextTitle2">
            <ListView
                android:id="@+id/TabTextList2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:dividerHeight="1dp">
            </ListView>
        </ScrollView>
    </LinearLayout>

</ScrollView>